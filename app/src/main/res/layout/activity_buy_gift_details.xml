<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.BuyAndGift.BuyGiftDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:elevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="center"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Gift Cards"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h2"
                        android:visibility="visible" />


                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>

        </androidx.cardview.widget.CardView>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">


                <ImageView
                    android:id="@+id/gift_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/temp_offer_promotion" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/lightBlack"
                        app:cardCornerRadius="3dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="Name"
                                android:textColor="@color/white"
                                android:textSize="18sp" />


                            <TextView
                                android:id="@+id/giftcard_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="-"
                                android:textColor="@color/textYello"
                                android:textSize="22sp" />


                            <RelativeLayout
                                android:id="@+id/gift_now"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/gift_now11"
                                    android:layout_width="190dp"
                                    android:layout_height="45dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="25dp"
                                    android:background="@drawable/gradiant_button"
                                    android:gravity="center"
                                    android:text="Buy Now"
                                    android:textColor="@color/btn_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <!-- offer details, steps to redeem voucher, tc, redeemable outlet-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/gift_card_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/lightBlack"
                        app:cardCornerRadius="3dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp">


                            <!-- Offer Details -->
                            <LinearLayout
                                android:id="@+id/offer_detils"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_info" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Offer Details"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentEnd="true"
                                        android:src="@drawable/ic_arrow_down" />

                                </RelativeLayout>


                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.80dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="10dp"
                                android:background="#6E6E6E" />


                            <LinearLayout
                                android:id="@+id/offer_details_description_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/offerDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="-"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.80dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#6E6E6E" />


                            </LinearLayout>


                            <!-- Steps to redeem the voucher  -->

                            <LinearLayout
                                android:id="@+id/steps_to_redeem_the_voucher"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="8dp">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_gourp_123" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Steps to redeem the voucher"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentEnd="true"
                                        android:src="@drawable/ic_arrow_down" />

                                </RelativeLayout>


                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.80dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="10dp"
                                android:background="#6E6E6E" />


                            <LinearLayout
                                android:id="@+id/step_to_redeem_the_voucher_description_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/step_to_reteem_voucher"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="-"
                                    android:textColor="@color/textYello"
                                    android:textSize="13sp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="This voucher is valid until the date mentioned on the voucher and can be redeemed at any apprael group of AUE"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="2.Super Saver"
                                    android:textColor="@color/textYello"
                                    android:textSize="13sp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="This voucher is valid until the date mentioned on the voucher and can be redeemed at any apprael group of AUE"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="3.Contractless Dining"
                                    android:textColor="@color/textYello"
                                    android:textSize="13sp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="This voucher is valid until the date mentioned on the voucher and can be redeemed at any apprael group of AUE"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.80dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#6E6E6E" />


                            </LinearLayout>


                            <!-- Terms and Condition -->
                            <LinearLayout
                                android:id="@+id/terms_and_conditions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="8dp">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_article_24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Terms and conditions"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentEnd="true"
                                        android:src="@drawable/ic_arrow_down" />

                                </RelativeLayout>


                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.80dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="10dp"
                                android:background="#6E6E6E" />


                            <LinearLayout
                                android:id="@+id/tc_description_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/terms_and_condition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text="-"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.80dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#6E6E6E" />


                            </LinearLayout>


                            <!-- Redeemable outlet -->
                            <LinearLayout
                                android:id="@+id/redeemable_outlet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_location" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Redeemable outlet"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentEnd="true"
                                        android:src="@drawable/ic_arrow_down" />

                                </RelativeLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/redeemable_outlet_description_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:id="@+id/redeemable_outlet_line"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.80dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#6E6E6E"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/redeemable_outlet_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="10dp"
                                    android:text=""
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp" />

                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <!--  Pay by Points Pay Online   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/point_payOnline_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/lightBlack"
                        app:cardCornerRadius="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:checkedButton="@id/radio_one"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <RadioButton
                                    android:id="@+id/radio_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/textYello"
                                    android:scaleX="0.80"
                                    android:scaleY="0.80"
                                    android:text="Pay by Points"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                                <RadioButton
                                    android:id="@+id/radio_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/textYello"
                                    android:scaleX="0.80"
                                    android:scaleY="0.80"
                                    android:text="Pay Online"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </RadioGroup>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <EditText
                                    android:id="@+id/amout_gift_cards"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Amount"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="@color/textLightWhite"
                                    app:backgroundTint="@color/white" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/range"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Range"
                                        android:textColor="@color/white"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/min_max_points"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:text="-"
                                        android:textColor="@color/textYello"
                                        android:textSize="16sp" />


                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/point_editext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <EditText
                                    android:id="@+id/point_balance_edittext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:editable="false"
                                    android:hint="Points"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="@color/textLightWhite"
                                    app:backgroundTint="@color/white" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Your Current Balance is"
                                        android:textColor="@color/white"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/current_balance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:text="500"
                                        android:textColor="@color/textYello"
                                        android:textSize="16sp" />


                                </LinearLayout>


                            </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/gift_now_amout_point"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="190dp"
                                    android:layout_height="45dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/gradiant_button"
                                    android:gravity="center"
                                    android:text="Buy Now"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </RelativeLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


    <!--  Voucher Issued Successfully -->
    <LinearLayout
        android:id="@+id/voucher_issue_success_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#151b2d"
        android:orientation="vertical"
        android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            app:cardBackgroundColor="#62656d"
            app:cardCornerRadius="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mask_group_4" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="Voucher issued successfully"
                    android:textColor="#E39600"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"

                    android:text="Would you like to gift this voucher"
                    android:textColor="#807E7E"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/no_gift_voucher"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border_yellow_back_white"
                android:gravity="center"
                android:text="No"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/yes_gift_voucher"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/gradiant_button"
                android:gravity="center"
                android:text="Yes"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>