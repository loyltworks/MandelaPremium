<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5">

            <ImageView
                android:id="@+id/gift_card_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_offer_promotion" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:background="@color/lightBlack"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gift_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Apparel Gift Card"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:gravity="center" />


        </LinearLayout>


    </LinearLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:background="@color/lightBlack">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#A9505050"
            android:background="@drawable/dash_line"
            android:layerType="software" />

    </RelativeLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/lightBlack">


        <TextView
            android:id="@+id/buy_gift_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/gradiant_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Buy &amp; Gift"
            android:textColor="@color/btn_text_color"
            android:textSize="16sp"/>

    </androidx.cardview.widget.CardView>



</LinearLayout>