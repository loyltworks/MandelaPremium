<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/h4"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_query_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start|center_horizontal"
            android:text="xx xxx xx xx"
            android:textColor="@color/textLightWhite"
            android:textSize="9dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="@dimen/noraml_btn_height"
        android:layout_marginBottom="2dp"
        android:background="@drawable/left_chat_cell_backg_image">

        <ImageView
            android:id="@+id/chatImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:visibility="gone" />



    </LinearLayout>


    <TextView
        android:id="@+id/row_query_pdf_other"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginBottom="5dp"
        android:background="@drawable/left_chat_cell_backg"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_regular"
        android:padding="4dp"
        android:text="XXXXXX"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/row_query_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/noraml_btn_height"
        android:background="@drawable/left_chat_cell_backg"
        android:elevation="@dimen/activity_vertical_small_margin"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/activity_vertical_small_margin"
        android:text="xx xxxx xxxx xxx xxxx"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/row_query_missed_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_phone_missed" />

    <TextView
        android:id="@+id/row_query_sender"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/noraml_btn_height"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="xx xxxx xxx"
        android:textColor="@color/textLightWhite"
        android:textSize="9dp" />

</LinearLayout>
