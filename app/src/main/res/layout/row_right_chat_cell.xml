<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="@dimen/activity_vertical_small_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="end"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rowQueryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:text="xx xxx xx xx"
            android:textColor="@color/textLightWhite"
            android:textSize="9dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/noraml_btn_height"
        android:layout_marginBottom="2dp"
        android:background="@drawable/right_chat_cell_backg_image">

        <ImageView
            android:id="@+id/chatImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:visibility="gone"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>

    <TextView
        android:id="@+id/pdf"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/noraml_btn_height"
        android:layout_marginBottom="5dp"
        android:background="@drawable/right_chat_cell_backg"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_regular"
        android:padding="4dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="12dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/rowQueryText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/noraml_btn_height"
        android:background="@drawable/right_chat_cell_backg"
        android:elevation="@dimen/activity_vertical_small_margin"
        android:fontFamily="@font/poppins_regular"
        android:padding="15dp"
        android:text="xxxxx x xxxx xxxx xxx xx"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/rowQueryMissedCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_phone_missed" />


    <TextView
        android:id="@+id/rowQuerySender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="XXXXXX"
        android:textColor="@color/textLightWhite"
        android:textSize="9dp" />

</LinearLayout>

