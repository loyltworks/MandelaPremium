<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/curve_bg"
    android:backgroundTint="@color/light_grey1"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h7"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Vehicle Type"
                android:textAlignment="textStart"
                android:textColor="@color/orange"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/vehicle_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:text="XXXXXX"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/h4" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/h3"
            android:layout_weight="5"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="10dp"
                android:text="Fuel Type"
                android:textAlignment="textStart"

                android:textColor="@color/orange"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fuel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="10dp"
                android:text="XXXXXX"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/h4" />


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Model"
                android:textColor="@color/orange"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Registration Num"
                android:textColor="@color/orange"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h3"

            android:layout_weight="4.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/model_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h3"
                android:layout_weight="5"
                android:background="@android:color/transparent"

                android:fontFamily="@font/poppins_medium"
                android:paddingStart="10dp"
                android:text="XXXXXX"
                android:textColor="@color/black"
                android:textSize="@dimen/h4" />

            <TextView
                android:id="@+id/registration_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h3"
                android:layout_marginTop="7dp"
                android:layout_weight="5"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="10dp"
                android:text="XXXXXX"
                android:textColor="@color/black"
                android:textSize="@dimen/h4" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
